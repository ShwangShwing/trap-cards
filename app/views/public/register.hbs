<h1>
    {{title}}
</h1>
<div>
    <form action="" method="POST">
        <div class="item-row">
            <div class="item-label"><label for="email">E-mail</label></div>
            <div class="item-value"><input type="text" name="email" id="email" value="{{email}}"></div>
        </div>
        <div class="item-row">
            <div class="item-label"><label for="email-confirm">Потвърждение E-mail</label></div>
            <div class="item-value"><input type="text" name="emailconfirm" id="email-confirm"></div>
        </div>
        <div class="item-row">
            <div class="item-label"><label for="nick">Прякор</label></div>
            <div class="item-value"><input type="text" name="nick" id="nick" value="{{nick}}"></div>
        </div>
        <div class="item-row">
            <div class="item-label"><label for="first-name">Собствено име</label></div>
            <div class="item-value"><input type="text" name="firstname" id="first-name" value="{{firstName}}"></div>
        </div>
        <div class="item-row">
            <div class="item-label"><label for="last-name">Фамилно име</label></div>
            <div class="item-value"><input type="text" name="lastname" id="last-name" value="{{lastName}}"></div>
        </div>
        <div class="item-row">
            <input type="submit" name="" value="Регистрация">
        </div>
    </form>
</div>